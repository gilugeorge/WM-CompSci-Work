#include <stdio.h>

int main(){
  int vector1, vector2;
  unsigned short int v1, v2;

  //extract vectors
  printf("Input Vector 1: ");
  scanf("%x", &vector1);
  printf("Input Vector 2: ");
  scanf("%x", &vector2);

  //recast into unsigned shorts
  v1 = (short)vector1;
  v2 = (short)vector2;

  printf("1: %u\n", v1);
  printf("2: %u\n", v2);
  
  
  return 0;
}//main
